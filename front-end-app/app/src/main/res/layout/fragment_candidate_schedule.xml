<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_constraint_layout_activity_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".modules.core.BaseActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_header"
                android:background="@drawable/rectangle_bg_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="148dp">

                <ImageView
                    android:id="@+id/image_view_hire_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hirelink_logo"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/hirelink_logo" />

                <ImageButton
                    android:id="@+id/img_btn_schedule"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxh"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="57dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/schedule_blue_icon" />

                <ImageButton
                    android:id="@+id/img_btn_profile"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxh"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/profil_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_login"
                    style="@style/AppButtonIndigoRounded"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="@dimen/_9pxh"
                    android:singleLine="true"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_field_search"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/search_icon"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/microphone_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_view_hire_link"
                    android:layout_marginTop="24dp"
                    android:hint="@string/search"
                    app:boxCornerRadiusTopStart="@dimen/_25pxh"
                    app:boxCornerRadiusBottomEnd="@dimen/_25pxh"
                    app:boxCornerRadiusBottomStart="@dimen/_25pxh"
                    app:boxCornerRadiusTopEnd="@dimen/_25pxh" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_job_offer_list_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:id="@+id/img_btn_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_field_search"
                    app:layout_constraintBottom_toBottomOf="@id/text_field_search"
                    app:layout_constraintStart_toEndOf="@id/text_field_search"
                    app:icon="@drawable/filter_search_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/first_material_card"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                style="?attr/materialCardViewElevatedStyle"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/gray_app"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                app:layout_constraintTop_toBottomOf="@id/search_header"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/first_card"
                    android:padding="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/candidacy_date"
                        tools:text="@string/date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/OfferListItemStyleHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/apple_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/apple_logo_icon"
                        android:layout_marginStart="10dp"
                        tools:ignore="ContentDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/candidacy_date" />

                    <TextView
                        android:id="@+id/company_name"
                        tools:text="@string/apple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:lineSpacingExtra="@dimen/_9pxh"
                        android:textSize="15sp"
                        android:letterSpacing="0.05"
                        android:layout_marginTop="4dp"
                        style="@style/AppTextSemiBoldBlack"
                        app:layout_constraintStart_toEndOf="@id/apple_logo"
                        app:layout_constraintTop_toBottomOf="@id/candidacy_date" />

                    <ImageView
                        android:id="@+id/icon_job_title"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/gray_suitcase_icon"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/gray_suitcase_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/apple_logo" />

                    <TextView
                        android:id="@+id/text_view_job_title"
                        tools:text="@string/data_analyst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:letterSpacing="0.08"
                        android:lineSpacingExtra="@dimen/_7pxh"
                        android:singleLine="true"
                        style="@style/AppOfferTextRegular"
                        app:layout_constraintStart_toEndOf="@id/icon_job_title"
                        app:layout_constraintTop_toTopOf="@id/icon_job_title"
                        app:layout_constraintBottom_toBottomOf="@id/icon_job_title" />

                    <ImageView
                        android:id="@+id/icon_location"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/gray_location_icon"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/gray_location_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_job_title" />

                    <TextView
                        android:id="@+id/text_view_location"
                        tools:text="@string/tulum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:letterSpacing="0.08"
                        android:lineSpacingExtra="@dimen/_7pxh"
                        android:singleLine="true"
                        style="@style/AppOfferTextRegular"
                        app:layout_constraintStart_toEndOf="@id/icon_location"
                        app:layout_constraintTop_toTopOf="@id/icon_location"
                        app:layout_constraintBottom_toBottomOf="@id/icon_location" />

                    <TextView
                        android:id="@+id/bottom_right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duration_1"
                        style="@style/AppTextSemiBold"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/second_material_card"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                style="?attr/materialCardViewElevatedStyle"
                app:cardCornerRadius="10dp"
                app:rippleColor="@color/gray_app"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                app:layout_constraintTop_toBottomOf="@id/first_material_card"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/second_card"
                    android:padding="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/candidacy_date_2"
                        tools:text="@string/date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/OfferListItemStyleHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/mcdo_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mcdo_logo_icon"
                        android:layout_marginStart="10dp"
                        tools:ignore="ContentDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/candidacy_date_2" />

                    <TextView
                        android:id="@+id/company_name_2"
                        tools:text="@string/mcdo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:lineSpacingExtra="@dimen/_9pxh"
                        android:textSize="15sp"
                        android:letterSpacing="0.05"
                        android:layout_marginTop="4dp"
                        style="@style/AppTextSemiBoldBlack"
                        app:layout_constraintStart_toEndOf="@id/mcdo_logo"
                        app:layout_constraintTop_toBottomOf="@id/candidacy_date_2" />

                    <ImageView
                        android:id="@+id/icon_job_title_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/gray_suitcase_icon"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/gray_suitcase_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mcdo_logo" />

                    <TextView
                        android:id="@+id/text_view_job_title_2"
                        tools:text="@string/cleaning_agent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:letterSpacing="0.08"
                        android:lineSpacingExtra="@dimen/_7pxh"
                        android:singleLine="true"
                        style="@style/AppOfferTextRegular"
                        app:layout_constraintStart_toEndOf="@id/icon_job_title_2"
                        app:layout_constraintTop_toTopOf="@id/icon_job_title_2"
                        app:layout_constraintBottom_toBottomOf="@id/icon_job_title_2" />

                    <ImageView
                        android:id="@+id/icon_location_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/gray_location_icon"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/gray_location_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_job_title_2" />

                    <TextView
                        android:id="@+id/text_view_location_2"
                        tools:text="@string/paris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:letterSpacing="0.08"
                        android:lineSpacingExtra="@dimen/_7pxh"
                        android:singleLine="true"
                        style="@style/AppOfferTextRegular"
                        app:layout_constraintStart_toEndOf="@id/icon_location_2"
                        app:layout_constraintTop_toTopOf="@id/icon_location_2"
                        app:layout_constraintBottom_toBottomOf="@id/icon_location_2" />

                    <TextView
                        android:id="@+id/bottom_right_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duration_2"
                        style="@style/AppTextSemiBold"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:menu="@menu/bottom_navigation_menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>